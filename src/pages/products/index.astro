---
import SparkButton from "@/components/animated/SparkButton.svelte";
import Main from "@/layout/main.astro";
---

<Main title="Products | Pruthivi Thejan ">
  <div class="container relative pb-10">
    <section
    class="mx-auto flex max-w-[980px] flex-col items-center gap-2 py-8 md:py-12 md:pb-8 lg:py-24 lg:pb-20"
  >
  <a href="https://gitlab.com/users/pruthivithejan/projects" target="_blank" class="animate-enter" style="--stagger: 1">
    <SparkButton text="Under Construction"/>
  </a>

    <h1
      class="text-center font-heading text-neutral-50 text-3xl font-bold leading-tight md:text-6xl lg:leading-[1.1] hidden md:block animate-enter"
    >
      Recent products
    </h1>
    <h1
      class="text-center font-heading text-neutral-50 text-3xl font-bold leading-tight md:text-6xl lg:leading-[1.1] md:hidden animate-enter"
    >
      Products
    </h1>
    <p
      class="max-w-[750px] text-center text-lg text-muted-foreground sm:text-xl text-balance animate-enter"
      style="--stagger: 1"
    >
    Explore a curated collection of high-quality templates crafted with precision and attention to detail, suitable for various UI/UX design needs and software development projects.
    </p>
  </section class="my-3">
    <div class="h-screen font-body mt-16 text-center">
      
     
    </div>
  </div>
</Main>