---
interface Props {
	text?: string;
}

const { text, ...rest } = Astro.props as Props;
---

<h1 class="scroll-m-20 text-center font-heading bg-gradient-to-b from-neutral-50 to-neutral-500 bg-clip-text text-transparent text-5xl font-bold leading-tight  md:text-7xl lg:leading-[1.1] animate-enter">
    {text}
</h1>