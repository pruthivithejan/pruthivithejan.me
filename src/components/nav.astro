---
//library imports
import { Icon } from "astro-icon";
//data imports
import navData from "../data/navData";
//components imports
import Link from "./link.astro";




---

<nav class="text-white font-body font-light">
  <div class="hidden lg:flex max-w-6xl mx-auto fixed backdrop-blur-sm z-50 top-0 left-0 right-0 h-20 shadow-sm items-center justify-between px-8">
    <a href="/" class="logomark" aria-label="Go home">
      <Icon name="logomark" width="40" />
    </a>
    <ul class="flex flex-row gap-11 text-xl items-center">
      {
        navData.map((item) => (
          <Link
            text={item.name}
            href={item.path}
            isFilled={false}
            data-navLink
          />
        ))
      }
    </ul>
  </div>
  <div class="lg:hidden sm:flex md:flex max-w-6xl mx-auto fixed backdrop-blur-sm z-50 top-0 left-0 right-0 h-20 shadow-sm items-center justify-center px-8">
    <ul class="flex flex-row gap-11 text-xl items-center">
      {
        navData.map((item) => (
          <a href={item.path}><Icon name={item.icon} width="32" class="text-white" /></a>
        ))
      }
    </ul>
  </div>
</nav>

<script>
  import "../lib/nav.js";
  const links = document.querySelectorAll('ul a');

  links.forEach((link: HTMLAnchorElement) => {
  if (link.href === window.location.href) {
    link.classList.add('bg-gradient-to-b','from-neutral-700','to-neutral-800','rounded-lg', 'font-semibold', 'py-1.5', 'px-3');
  }
});
</script>
