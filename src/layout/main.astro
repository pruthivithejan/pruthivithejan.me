---
import "../styles/global.css"
//component imports
import Head from "./head.astro";
import Footer from "../components/footer.astro";
import Nav from "../components/nav.astro";

const {
  title = "Pruthivi Thejan",
  description = "Personal website of Pruthivi Thejan",
  image,
  frontmatter,
  robots,
} = Astro.props;
---

<html lang="en">
  <Head {title} {description} {image} {frontmatter} {robots} />
  <body class="max-w-6xl mx-auto bg-neutral-900">
    <Nav />
    <main>
      <slot>Default</slot>
    </main>
    <Footer />
  </body>
</html>
